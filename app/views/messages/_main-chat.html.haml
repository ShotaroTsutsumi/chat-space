.main-chat
  .header
    .left-box
      .left-box__current-group
        = @group.name
      %ul.left-box__member-list
        Member : 
        %li.member
          - @group.users.each do |user|
            = user.name
       
    .right-box
      .right-box__edit-btn
        = link_to edit_group_path(@group) do
          Edit
  .message-list
    = render @messages
  .message-form
    .form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__text', placeholder: 'type a message'
        .form__image
          =f.label :image, class: 'form__image__picture' do
            = icon('fa','image',class: 'icon')
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit-btn'




